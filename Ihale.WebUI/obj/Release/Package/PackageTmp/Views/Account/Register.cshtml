
@{
    Layout = "../Shared/_Layout.cshtml";
}

@section head
{
    <title>Mıknatısla - Kayıt Ol</title>
}

<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Hesap</a></li>
        <li><a href="#">Kayıt Ol</a></li>
    </ul>

    <div class="row">
        <div id="content" class="col-sm-12">
            <h2 class="title">Hesap Oluştur</h2>
            <p>Eğer hesabınız varsa <a href="@Url.Action("Login","Account")">giriş yapın</a> veya <a href="@Url.Action("RegisterInstagram","Account")">İnstagram ile bağlanın</a></p>
            <form action="@Url.Action("Register","Account")" method="post" class="form-horizontal account-register clearfix">
                <fieldset id="account">
                    <legend>Üyelik Formu</legend>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-firstname">Ad</label>
                        <div class="col-sm-10">
                            <input type="text" name="FirstName" value="" placeholder="İsminizi giriniz..." id="input-firstname" class="form-control form-control1">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-lastname">Soyad</label>
                        <div class="col-sm-10">
                            <input type="text" name="LastName" value="" placeholder="Soyadınızı giriniz..." id="input-lastname" class="form-control form-control1">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-email">Mail Adresi</label>
                        <div class="col-sm-10">
                            <input type="email" name="Mail" value="" placeholder="Mail Adresinizi giriniz" id="input-email" class="form-control form-control1">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-lastname">Kullanıcı Adı</label>
                        <div class="col-sm-10">
                            <input type="text" name="UserName" value="" placeholder="Kullanıcı Adı giriniz..." id="user-name" class="form-control form-control1">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-password">Şifre</label>
                        <div class="col-sm-10">
                            <input type="password" name="Password" value="" placeholder="Şifre giriniz..." id="input-password" class="form-control form-control1">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-confirm">Şifre Tekrar</label>
                        <div class="col-sm-10">
                            <input type="password" name="PasswordConfirm" value="" placeholder="Şifrenizi tekrar giriniz..." id="input-confirm" class="form-control form-control1">
                        </div>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Kampanya!!!</legend>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Kampanyalardan Haberdar Olmak İstermisiniz?</label>
                        <div class="col-sm-10">
                            <label class="radio-inline">
                                <input type="radio" name="Newsletter" value="1" checked="checked"> Evet
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="Newsletter" value="0"> Hayır
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="buttons">
                    <div class="pull-right">
                        Kullanıcı<a href="#" class="agree"><b> sözleşmesini  </b></a>okudum ve onaylıyorum.
                        <input class="box-checkbox policya" type="checkbox" name="PolicyConfirm" value="1"> &nbsp;
                        <input type="submit" value="Kayıt Ol" id="register" class="btn btn-primary disabled">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/HomeScripts/RegisterValidate.js"></script>
}