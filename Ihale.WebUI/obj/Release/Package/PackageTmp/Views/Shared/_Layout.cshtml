        <div class=" container">
            <div class="row">
                <div class="col-sm-5 copyright-text"> © 2018 Powered by Lounge. </div>
                <div class="col-sm-7">
                    <div class="block-payment text-right"><img src="~/Content/image/demo/content/payment.png" alt="payment" title="payment"></div>
                </div>
                <!--Back To Top-->
                <div class="back-to-top"><i class="fa fa-angle-up"></i><span> Yukarı </span></div>

            </div>
        </div>
    </div>
    <!-- /Footer Bottom Container -->


</footer>
<!-- //end Footer Container -->

</div>




