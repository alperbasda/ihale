
@{
    ViewBag.Title = "NewPasswordF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-main">
    <div class="col-sm-9">
        <div class="col-sm-12">
            <form method="post" action="#">
                <fieldset>
                    <legend>Yeni Şifre</legend>
                    <p><a href="#">Artık yeni şifrenizi girebilirsiniz.</a></p>
                </fieldset>
            </form>
            <br />
            <form method="post" action="#">
                <fieldset>
                    <legend>Şifrenizi Doğrulayın</legend>
                    <div class="form-group required">
                        <label for="input-password" class="control-label">Yemi Şifre</label>
                        <input type="password" class="form-control" placeholder="Şifre" value="" name="Password">
                    </div>
                    <div class="form-group required">
                        <label for="input-password" class="control-label">Yeni Şifre Tekrar</label>
                        <input type="password" class="form-control" placeholder="Şifre Tekrar" value="" name="PasswordConfirm">
                    </div>

                    <div class="buttons clearfix">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-md btn-primary" value="Değiştir">
                        </div>
                    </div>
                </fieldset>
            </form>
            <br />

        </div>

    </div>


</div>
