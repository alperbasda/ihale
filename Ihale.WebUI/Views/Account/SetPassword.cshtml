
@{
    ViewBag.Title = "SetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-main">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="@Url.Action("Profil","Account")">Hesabım</a></li>
        <li><a>Şifre Değişikliği</a></li>
    </ul>
    <div class="col-sm-9">
        <div class="col-sm-12">
            <form method="post">
                <fieldset>
                    <legend>Şifrenin güvenilirliğinden şüphelimisin?</legend>
                    <p><a href="@Url.Action("ForgetPassword","Account")">Eski şifreni biliyorsan hemen değiştirebilirsin. Bilmiyorsan yazıya tıkla.</a></p>
                </fieldset>
            </form>
            <br/>
            <form method="post">
                <fieldset>
                    <legend>Şifre Değişikliği</legend>
                    <div class="form-group required">
                        <label for="input-password" class="control-label">Eski Şifre</label>
                        <input type="password" class="form-control" placeholder="Eski şifrenizi yazın" value="" name="oldPassword">
                    </div>

                    <div class="form-group required">
                        <label for="input-password" class="control-label">Yeni Şifre</label>
                        <input type="password" class="form-control" id="input-password" placeholder="Yeni şifrenizi yazın" value="" name="newPassword">
                    </div>
                    <div class="form-group required">
                        <label for="input-confirm" class="control-label">Yeni şifre tekrar</label>
                        <input type="password" class="form-control" id="input-confirm" placeholder="Yeni şifrenizi tekrar yazın" value="" name="newConfirm">
                    </div>
                    <div class="buttons clearfix">
                        <div class="pull-right">
                            <input type="submit" id="register" class="btn btn-md btn-primary disabled" value="Kaydet">
                        </div>
                    </div>
                </fieldset>
            </form>
            <br/>

        </div>

    </div>

    <!--Right Part Start -->
    @Html.Partial("RightPartial", "Account")
    <!--Right Part End -->

</div>
